} else if (lang == "en") {
	image = document.getElementById('heb');
  	image.style.visibility = 'hidden';
	image = document.getElementById('fr');
  	image.style.visibility = 'hidden';
} else if (lang == "fr") {
	image = document.getElementById('heb');
  	image.style.visibility = 'hidden';
	image = document.getElementById('eng');
  	image.style.visibility = 'hidden';
}
  </script>
